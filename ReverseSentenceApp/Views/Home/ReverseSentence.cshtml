@{
    ViewData["Title"] = "Reverse Sentence";
}

<h2>Reverse Sentence</h2>

<form asp-controller="Home" asp-action="ReverseSentence" method="post">
    <div>
        <label for="sentence">Enter a sentence:</label>
        <input type="text" id="sentence" name="sentence" required />
    </div>
    <div>
        <button type="submit">Reverse Sentence</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(ViewData["ReversedSentence"] as string))
{
    <div>
        <h3>Reversed Sentence:</h3>
        <p>@ViewData["ReversedSentence"]</p>
    </div>
}
